<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categoria_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_solid"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_bar_margin">

            <ImageButton
                android:id="@+id/imageButtonCategoria"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/felicidad1"
                android:scaleType="centerInside"></ImageButton>

            <TextView
                android:id="@+id/categoria_textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageButtonCategoria"
                android:layout_marginBottom="5dp"
                android:height="50dp"
                android:singleLine="true"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic"></TextView>

            <TextView
                android:id="@+id/categoria_textDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/categoria_textName"
                android:layout_toRightOf="@id/imageButtonCategoria"
                android:layout_marginBottom="5dp"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBarCategorias"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:indeterminateTint="@color/yellow"></ProgressBar>

        <TextView
            android:id="@+id/txtPorcentajePbCategorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/text_style"
            android:text="0 %"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>

