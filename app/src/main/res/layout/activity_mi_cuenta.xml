<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiCuentaActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbLayoutPrincipal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/app_bar_margin"
                android:text="@string/mi_cuenta"
                android:textColor="@color/black"
                android:textSize="@dimen/app_bar_textsize"></TextView>
            <ImageView
                android:layout_width="@dimen/app_bar_image"
                android:layout_height="@dimen/app_bar_image"
                android:layout_margin="@dimen/app_bar_margin"
                android:layout_alignParentRight="true"
                android:background="@drawable/logo_layout"
                ></ImageView>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <ListView
        android:id="@+id/lvMiCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_style"
        android:choiceMode="multipleChoice">
    </ListView>

</LinearLayout>